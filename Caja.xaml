<Window x:Class="SistemaDental.Caja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDental"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Caja" Height="480.391" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="197*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="TeethPattern.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBox x:Name="txtDineroCaja" Margin="551,311,43,75" materialDesign:HintAssist.Hint="Dinero Disponible" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Bahnschrift" FontSize="18" Background="#7FFFFFFF" Foreground="Black" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtCantidadCaja" Margin="42,311,350.598,75" materialDesign:HintAssist.Hint="Cantidad" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Bahnschrift" FontSize="18" Background="#7FFFFFFF" Foreground="Black"/>
        <Label Content="Transacción" HorizontalAlignment="Left" Margin="273,311,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="16" Foreground="Black"/>
        <RadioButton Content="Ingreso" HorizontalAlignment="Left" Margin="284,343,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="16"/>
        <RadioButton Content="Egreso" HorizontalAlignment="Left" Margin="393,343,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="16"/>
        <Button Content="Realizar Transacción" HorizontalAlignment="Left" Margin="204,392,0,0" VerticalAlignment="Top" Width="170" Height="40" Background="#FF056676" BorderBrush="{x:Null}"/>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="401,392,0,0" VerticalAlignment="Top" Width="170" Height="40" Background="#FF056676" BorderBrush="{x:Null}"/>
        <DataGrid x:Name="dtgCaja" HorizontalAlignment="Left" Height="238" Margin="42,36,0,0" VerticalAlignment="Top" Width="707" Background="#FF056676" Foreground="#DDFFFFFF" Grid.ColumnSpan="2" />
    </Grid>
</Window>
